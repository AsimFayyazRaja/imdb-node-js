<h1>{{title}}</h1>
<p><b>Welcome to {{title}}</b></p>

<p> welcome {{name}}</p>

<div class="row">
{{# if movie.image}}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="{{movie.image}}" alt="...">
      <div class="caption">
        <h3>"{{movie.title}}"</h3>
        <p class="description">"{{movie.description}}"</p>
       <div class="price">"{{movie.year}}"</div>
        <p> {{this.id}} <div class="pull-right" id="b1">Rating: {{movie.avg}}<div></p>
      </div>
    </div>
  </div>
  {{/if}}

<div class="row">
<br>
<form action="/addrating{{movie.title}}" method="POST" role="form">
<br>
<div class="form-group">
<label for="email">YOUR RATING</label>
<input type="number" id="rating" name="rating">
 <button type="submit">Add Rating</button>

</div>
</div>

</form>
    </div>

